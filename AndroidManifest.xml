<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneymatters"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LaunchScreen"
            android:label="@string/title_activity_launch_screen"
            android:theme="@android:style/Theme.Black" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddBorrower"
            android:label="@string/title_activity_borrowed_money" >
        </activity>
        <activity
            android:name=".ViewBorrow"
            android:label="@string/title_activity_view_borrow"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name=".BorrowDetails"
            android:label="@string/title_activity_borrow_details"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name=".ViewLender"
            android:label="@string/title_activity_view_lender" >
        </activity>
        <activity
            android:name=".AddLender"
            android:label="@string/title_activity_add_lender" >
        </activity>
        <activity
            android:name=".LenderDetails"
            android:label="@string/title_activity_lender_details"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name=".BankAccount"
            android:label="@string/title_activity_bank_account" >
        </activity>
        <activity
            android:name=".AccountDetails"
            android:label="@string/title_activity_account_details"
            android:theme="@android:style/Theme.Black" >
        </activity>
        <activity
            android:name=".NewAccount"
            android:label="@string/title_activity_new_account" >
            
        </activity>
    </application>

</manifest>